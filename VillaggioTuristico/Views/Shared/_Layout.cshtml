@using Microsoft.AspNetCore.Identity
@using VillaggioTuristico.Entities
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VillaggioTuristico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap 5 -->
@*    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>*@


    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/modal.css" rel="stylesheet" />
</head>
<body>
    <!-- <CreateUserModal> -->
    <div class="container">
        <div class="row">
            <div id="modal" class="modal">
                <div class="modal-content col-6" style="left:25%">
                    <div class="modal-header">
                        <h2 id="modal-header"></h2>
                    </div>
                    <div class="modal-body" id="modal-body">
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- </CreateUserModal> -->

    <!-- <navbar> -->

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    @*Home*@
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @*Camere*@
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Camere">Camere</a>
                    </li>

                    @*Prenotazione*@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Prenotazione">Prenotazione</a>
                        </li>
                    }

                    @*Area Personale Utente*@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AreaUtente">Area Utente</a>
                        </li>
                    }

                    @*Area Personale Admin*@
                    @if (SignInManager.IsSignedIn(User)) // qui ci sarebbe da mettere IsSignedIn(Admin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="HiddenPage">Admin Page</a>
                        </li>
                    }

                    @*Login*@
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    }

                    @*Logout*@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </li>
                    }
                    
                    @*Username a destra della navbar quando l'utente è loggato*@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav navbar-nav navbar-right">
                            <a class="navItem">@UserManager.GetUserName(User)</a>
                        </li>
                    }
                </ul>

                @*Create User button*@
                @if (!SignInManager.IsSignedIn(User))
                {
                    <button id="CreateUserButton" class="btn btn-success me-3" onclick="    showConfirmationModalForUsers('@Url.Action("CreateUser", "Home")', { addOrDelete: 'Add' });">Create User</button>
                }
            </div>
        </nav>
    </header>
    <!-- </navbar> -->



    <div class="container-fluid" style="padding:0px " >
        <main role="main" class="pb-3 d-flex flex-column min-vh-100">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted bg-dark mt-auto p-4 ">
        <div class="container">
            &copy; 2020 - VillaggioTuristico - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
